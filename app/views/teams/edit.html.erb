<% provide(:title, "Edit team") %>
<h1>Update team</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team, html: { multipart: true }) do |f| %>
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= team_logo @team %>
    </div>
  </div>
</div>