


<tr class = "team-stand-row">
  <td class = "team-position">
    <div>
      <%= team.position %>      
    </div>
    
  </td>
  
  <td class = "team-info">
    <div>
      <%= team_logo team, size: 60, ct: true, custom_size: true,
                          cs: {:w => 20, :h => 20} %>
    </div>
    <div>
      <%= link_to team.name, team %>
    </div>
  </td>

  <td>
    <div><span>wins: <%= team.wins %></span></div>
    <div><span>losses: <%= team.losses %></span></div>
    <div><span>playoff: <%= team.playoff ? "yes" : "no" %> </span></div>
  </td>

</tr>