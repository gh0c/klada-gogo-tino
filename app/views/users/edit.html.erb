<% provide(:title, "Edit user #{@user.name}") %>
<h1>Update profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: { multipart: true }) do |f| %>
      <div class="gravatar_edit">
        <%= avatar_for @user %>
      </div>
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>