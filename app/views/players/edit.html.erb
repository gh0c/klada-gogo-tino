<% provide(:title, "Edit player") %>
<h1>Update player</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@player, html: { multipart: true }) do |f| %>
      <div class="gravatar_edit">
        <%= avatar_for @player %>
      </div>
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>